{
    "name": "lokalnie/bootstrap",
    "description": "zaleznosci bootstrapa",
    "require": {
        "twbs/bootstrap": "^4.1",
        "components/jquery": "^3.3",
        "heimrichhannot/popper.js": "^1.12",
        "smarty/smarty": "^3.1",
        "components/font-awesome": "^4.7.0"
    },
    "scripts": {
        "post-install-cmd": [
            "cp -a vendor/twbs/bootstrap/dist/js/bootstrap.min.js public/js/",
            "cp -a vendor/twbs/bootstrap/dist/js/bootstrap.min.js.map public/js/",
            "cp -a vendor/twbs/bootstrap/dist/css/bootstrap.min.css public/css/",
            "cp -a vendor/twbs/bootstrap/dist/css/bootstrap.min.css.map public/css/",
            "cp -a vendor/components/jquery/jquery.js public/js/",
            "cp -a vendor/twbs/bootstrap/js/dist/popover.js public/js/",
            "cp -a vendor/twbs/bootstrap/js/dist/popover.js.map public/js/",
            "cp -a vendor/components/font-awesome/css/fontawesome.min.css public/css/"
        ]
    }
}
